import arcpy, os														#import modules

files_dir_1 = "C:\Temp\PDF_Test"										#sets directory of first PDF
files_dir_2 = "C:\Temp\PDF_Test\Photos"									#sets directory of second PDF
pdf_files_1 = [f for f in os.listdir(files_dir_1) if f.endswith("pdf")]	#sets list of first PDF files
pdf_files_2 = [f for f in os.listdir(files_dir_2) if f.endswith("pdf")]	#sets list of second PDF files


for f1, f2 in zip(pdf_files_1, pdf_files_2):				#loops through folders and matches up the PDF files (files must be in same order)
	pdfPath = os.path.join(r"C:\Temp\PDF_Test\ASNF_Site_Card-") 		#set PDF path location
	out_pdf_file = arcpy.mapping.PDFDocumentCreate(pdfPath + f1)		#set PDF output name
	print f1, f2														#on-screen verification of match
	out_pdf_file.appendPages(f1)										#appends first pdf
	out_pdf_file.appendPages(f2)										#appends second pdf
	
	out_pdf_file.saveAndClose()											#outputs pdf

	del out_pdf_file													#removes out_pdf_file from memory
